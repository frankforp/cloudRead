/**index.wxss**/
@import "/components/loadingMore/loagingMore.wxss";

.index .slide-image{
  width: 750rpx;
  height: 350rpx;
}
/* 书籍部分 */
.books-warpper{
  padding: 30rpx 20rpx 0 20rpx;
}
.book-warpper:active{
  background: #EEE;
  box-shadow: 0 0 2px 10px #DDD
}
.books-warpper:last-child{
  margin-bottom: 20rpx
}
.books-warpper .title-warpper{
  display: flex;
  justify-content: space-between;
}
.books-warpper .books-title{
  padding-left: 20rpx;
  border-left: 2px solid #888;
  font-size: 16px;
  font-weight: 700;
}
.books-warpper .more{
   font-size: 14px;
   color: #444
}
.books-warpper .book-warpper{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}
.books-warpper .book-warpper .img {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 0 0 2px 3px #333
}
.books-warpper .book-warpper .book-detail{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-left: 20rpx;
  padding: 10rpx 0
}
.books-warpper .book-warpper .book-detail .title{
  font-size: 14px;
  font-weight: 500;
}
.books-warpper .book-warpper .book-detail .desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  margin-top: 20rpx;
  font-size: 28rpx;
  color : #444;
}
.books-warpper .book-warpper .book-detail .book-author{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #444
}
.books-warpper .book-warpper .book-detail .book-author .look-num text{
  margin-left: 10rpx;
  font-size: 14px;
  font-weight: 700;
  color: #F33
}