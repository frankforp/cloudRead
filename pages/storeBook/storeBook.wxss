/* pages/storeBook/storeBook.wxss */
@import '/static/iconfont/iconfont.wxss';

.book-warpper{
  position: relative;
  display: flex;
  flex-direction: column;
  margin: 30rpx 18rpx 0 18rpx;
  float: left
}
.warpper::after{
  width: 0;
  height: 0;
  content: '';
  display: block;
  clear: both
}
.book-warpper:active{
  background: #bbb;
  box-shadow: 0 0 2rpx 3rpx #bbb
}
.book-warpper .icon-del{
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  border-radius: 50%;
  background: #e2e2e2;
  color: #f33
}
.book-warpper .img{
  width: 200rpx;
  height: 280rpx;
  box-shadow: 0 0 1px 2px #888
}
.book-warpper .book-name{
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 200rpx;
  font-size: 12px
}
.none{
  display: none
}
.end,.null-warn{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 14px;
  color: #888
}
.load-btn{
  text-align: center;
  color: #444
}
.bottom{
  margin-top: 40rpx;
  margin-bottom: 20rpx
}