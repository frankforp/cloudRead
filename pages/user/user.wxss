/* pages/user/user.wxss */
@import '/static/iconfont/iconfont.wxss';

.user {
  height: 400rpx;
  width: 750rpx;
  border-top: 2rpx solid #444;
  background: #1e1e1e;
}
.header {
  display: flex;
  align-items: flex-end;
  color: #e2e2e2;
}
.header .img {
  margin-top: 20rpx;
  margin-left: 20rpx; 
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #e2e2e2;
  box-shadow:  1px 1px 1px 2px #FFF;
  border-radius: 50%
}
.header .tag{
  display: flex;
  flex-direction: column;
  padding-bottom: 0;
  margin-left: 20rpx;
}
.header .tag .name{
  font-size: 18px;
  color: #e2e2e2
}
.header .tag .sign{
  margin-top: 40rpx;
  font-size: 14px;
  color: #CCC
}
/* 功能部分 */
.function{
  display: flex;
  justify-content: space-between;
  margin: 40rpx 100rpx;
  margin-top: 80rpx;
  font-size: 10px;
  color: #e2e2e2
}
.function .line {
  width: 2rpx;
  height: 70rpx;
  background: #888
}
.function .store {
  position: relative;
  text-align: center;
}
.function .icon{
  font-size: 24px;
  color: #1296db
}
.none{
  display: none
}
.num{
  position: absolute;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  top: -10rpx;
  left: 50rpx;
  width: 30rpx;
  height: 30rpx;
  background: #1296db;
  font-weight: bold;
  color: #f33;
  border-radius: 50%
}